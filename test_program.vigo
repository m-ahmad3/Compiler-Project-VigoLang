#* 
VigoLang Factorial Calculator 
*#
### Author: Muhammad Ahmad

ghq[[ ]] {{
    qaidi_no ^num := 5@
    qaidi_no ^fact := 1@
    qaidi_no ^i := 1@
    qaidi_no ^sum := 0@
    qaidi_no ^temp := 0@
    float_sarkar ^ratio := 2.5@
    bayania ^msg := "Calculating"@
    ishara ^grade := 'A'@
    
    farmaan << "Factorial Program"@
    farmaan << ^num@
    
    order_hai [[ ^num <? 0 ]] {{
        farmaan << "Negative not allowed"@
        ^num := 0@
    }}
    doosra_order [[ ^num =? 0 ]] {{
        ^fact := 1@
        farmaan << "Result is 1"@
    }}
    warna_vigo {{
        long_march [[ ^i := 1@ ^i <? ^num +: 1@ ^i := ^i +: 1 ]] {{
            ^fact := ^fact *: ^i@
            
            order_hai [[ ^i =? 10 ]] {{
                farmaan << "Max limit"@
                deal_ho_gai@
            }}
            
            order_hai [[ ^i =? 3 ]] {{
                chaltay_raho@
            }}
            
            ^sum := ^sum +: ^i@
        }}
    }}
    
    farmaan << ^fact@
    
    ^temp := ^num@
    jab_tak_missing [[ ^temp >? 0 ]] {{
        ^temp := ^temp -: 1@
    }}
    
    ^helper[[ ^num, ^fact ]]@
    
    nro 0@
}}

namaloom ^helper[[ qaidi_no ^a, qaidi_no ^b ]] {{
    qaidi_no ^result := ^a +: ^b@
    farmaan << ^result@
}}

safehouse ^calculator {{
    qaidi_no ^value@
    float_sarkar ^pi := 3.14@
    bayania ^name := "calc"@
}}@

ain qaidi_no ^max := 100@

qaidi_no ^flag := neutral@
qaidi_no ^status := janwar@

bayania ^final := "Done"@

farmaan << "Complete"@
